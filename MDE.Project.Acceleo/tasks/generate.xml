<?xml version="1.0" encoding="UTF-8"?>
<project default="generate" name="MDE.Project.Acceleo">
    <property name="ECLIPSE_HOME" value="../../../../eclipse/jee-photon/Eclipse.app/Contents/Eclipse"/>
    <property name="ECLIPSE_WORKSPACE" value="../.."/>

    <!-- The classpath with only the dependencies used by the project -->
    <path id="MDE.Project.Acceleo.libraryclasspath">
        <pathelement location="${ECLIPSE_WORKSPACE}/MDE.Project.Acceleo/bin"/>
    </path>

    <path id="MDE.Project.Acceleo.classpath">
        <path refid="MDE.Project.Acceleo.libraryclasspath"/>
    </path>

    <!-- The classpath with only the jars available in the plugin folder of Eclipse -->
    <path id="MDE.Project.Acceleo.libraryclasspath.alljars">
        <pathelement location="../MDE.Project.Acceleo/bin"/>
        <fileset dir="${ECLIPSE_HOME}/plugins/" includes="*.jar"/>
    </path>

    <path id="MDE.Project.Acceleo.classpath.alljars">
        <path refid="MDE.Project.Acceleo.libraryclasspath.alljars"/>
    </path>

    <!-- The default task with the jars used by this project -->
    <target name="generate">
        <java classname="MDE.Project.Acceleo.main.Generate" classpathref="MDE.Project.Acceleo.classpath">
            <arg value="${model}"/>
            <arg value="${target}"/>
        </java>
    </target>

    <!--
        In case of problem you can also try with all the jar available in your Eclipse
        Keep in mind that having two versions of the same jar can create problems
    -->
    <target name="generate.alljars">
        <java classname="MDE.Project.Acceleo.main.Generate" classpathref="MDE.Project.Acceleo.classpath">
            <arg value="${model}"/>
            <arg value="${target}"/>
        </java>
    </target>
</project>
